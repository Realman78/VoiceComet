<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" />
    <link rel="stylesheet" href="/css/main.css">
    <title>Title</title>
</head>

<body>

    <div class="wrapper">
        <div class="row">
            <nav class="col-2 d-flex"><a class="blue" href="/"><i class="fas fa-meteor"></i></a><a href="/"><i
                        class="fas fa-home"></i></a><a href="/search"><i class="fas fa-search"></i></a><a
                    href="/notifications"><i class="fas fa-bell"></i></a><a href="/messages"><i
                        class="fas fa-envelope"></i></a><a href="/profile"><i class="fas fa-user"></i></a><a
                    href="/logout"><i class="fas fa-sign-out-alt"></i></a></nav>
            <div class="mainSectionContainer col-10 col-md-8 col-lg-6">
                <div class="titleContainer">
                    <h1>{{pageTitle}}</h1>
                </div>
                    <script>
                        var userLoggedIn = {{{ userLoggedInJs }}}
                        var profileUser = {{{ profileUserJs}}}
                        var profileUserId = profileUser._id
                        var selectedTab = '{{selectedTab}}'
                    </script>
                    <div class="profileHeaderContainer">
                        <div class="coverPhotoSection">
                            <div class="coverPhotoContainer">

                            </div>
                            <div class="userImageContainer">
                                <img src={{profileUser.profilePic}} alt="User's profile picture">
                            </div>
                        </div>
                        <div class="profileButtonsContainer">

                        </div>
                        <div class="userDetailsContainer">
                            <span class="displayName">
                                {{profileUser.firstName}} {{profileUser.lastName}}
                            </span>
                            <span class="username">
                                @{{profileUser.username}}
                            </span>
                            <span class="description">
                                {{profileUser.description}}
                            </span>
                            <div class="followersContainer">
                                <a href="/profile/{{profileUser.username}}/following"> 
                                    <span class="value">{{profileUser.following.length}}</span><span>Following</span>
                                </a>
                                <a href="/profile/{{profileUser.username}}/followers"> 
                                    <span id="followersValue" class="value">{{profileUser.followers.length}}</span>
                                    <span>Followers</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="tabsContainer">

                    </div>
                    <div class="postsContainer">
                    
                    </div>
                    {{!-- ok --}}
                    <div class="modal fade" id="replyModal" tabindex="-1" role="dialog" aria-labelledby="replyModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="replyModalLabel">Reply</h5>
                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"></button>
                                    <span aria-hidden="true">Ã—</span>
                                </div>
                                <div class="modal-body">
                                    <div id="originalPostContainer">
                    
                                    </div>
                                    <div class="postFormContainer">
                                        <div class="userImageContainer"> <img src={{profileUser.profilePic}} alt="User's profile picture">
                                        </div>
                                        <div class="textareaContainer">
                                            <textarea id="replyTextArea" placeholder="What's happening?"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                                    <button class="btn btn-primary" id="submitReplyButton" type="button" disabled="">Reply</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{!-- ok --}}
                    {{!-- delte --}}
                    
                    <div class="modal fade" id="deletePostModal" tabindex="-1" role="dialog" aria-labelledby="deletePostModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deletePostModalLabel">Delete the post?</h5><button class="close"
                                        type="button" data-dismiss="modal" aria-label="Close"></button><span
                                        aria-hidden="true">&times;</span>
                                </div>
                                <div class="modal-body">
                                    <p>You won't be able to undo this.</p>
                                </div>
                                <div class="modal-footer"><button class="btn btn-secondary" type="button"
                                        data-dismiss="modal">Close</button><button class="btn btn-primary" id="deletePostButton"
                                        type="button">Delete</button></div>
                            </div>
                        </div>
                    </div>
                    {{!-- delte --}}
                    {{!-- cover --}}
                    <div class="modal fade" id="coverPhotoUploadModal" tabindex="-1" role="dialog" aria-labelledby="coverPhotoUploadModal"
                        aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="coverPhotoModal">Upload a new cover photo</h5><button class="close"
                                        type="button" data-dismiss="modal" aria-label="Close"></button><span
                                        aria-hidden="true">&times;</span>
                                </div>
                                <div class="modal-body"><input id="coverPhoto" type="file" name="filePhoto" />
                                    <div class="imagePreviewContainer"><img id="coverPreview" /></div>
                                </div>
                                <div class="modal-footer"><button class="btn btn-secondary" type="button"
                                        data-dismiss="modal">Cancel</button><button class="btn btn-primary" id="coverPhotoButton"
                                        type="button">Save</button></div>
                            </div>
                        </div>
                    </div>
                    {{!-- cover --}}
                    {{!-- profile --}}
                    <div class="modal fade" id="imageUploadModal" tabindex="-1" role="dialog" aria-labelledby="imageUploadModal"
                        aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="imageUploadModal">Upload a new profile picture</h5><button class="close"
                                        type="button" data-dismiss="modal" aria-label="Close"></button><span
                                        aria-hidden="true">&times;</span>
                                </div>
                                <div class="modal-body"><input id="filePhoto" type="file" name="filePhoto" />
                                    <div class="imagePreviewContainer"><img id="imagePreview" /></div>
                                </div>
                                <div class="modal-footer"><button class="btn btn-secondary" type="button"
                                        data-dismiss="modal">Cancel</button><button class="btn btn-primary" id="imageUploadButton"
                                        type="button">Save</button></div>
                            </div>
                        </div>
                    </div>
                    {{!-- profile --}}
            </div>
            <div class="d-none d-md-block col-md-2 col-lg-4"></div>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/85404227e2.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
        <script src="https://cdn.socket.io/3.1.3/socket.io.min.js"
            integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh"
            crossorigin="anonymous"></script>
    <script src="/js/common.js"></script>
    <script src="/js/profile.js"></script>
    <script src="/js/clientSocket.js"></script>

</body>

</html>