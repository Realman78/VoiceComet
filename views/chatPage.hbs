<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="icon" href="/images/comet.png" type="image/icon type">

</head>

<body>
    <div class="wrapper">
        <div class="row" style="height: 100%;">
            <nav class="col-2 d-flex">
                <a class="blue" href="/">
                    <i class="fas fa-meteor"></i>
                </a>
                <a href="/">
                    <i class="fas fa-home"></i>
                </a>
                <a href="/search">
                    <i class="fas fa-search"></i>
                </a>
                <a href="/notifications">
                    <i class="fas fa-bell"></i>
                    <span id="notificationBadge">3</span>
                </a>
                <a href="/messages">
                    <i class="fas fa-envelope"></i>
                    <span id="messagesBadge">3</span>
                </a>
                <a href="/profile">
                    <i class="fas fa-user"></i>
                </a>
                <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>
            </nav>
            <div class="mainSectionContainer col-10 col-md-8 col-lg-6">
                <div class="titleContainer">
                    <h1>{{pageTitle}}</h1>
                </div>
                <script>
                    var userLoggedIn = {{{ userLoggedInJs }}}
                    var profileUser = {{{ profileUserJs }}}
                    //var profileUserId = profileUser._id
                    var errorMessage = "{{errorMessage}}"
                    var chatData = {{{chat}}}
                    var chatId = "{{chatId}}"
                </script>
                {{!-- <span class="errorMessage">{{errorMessage}}</span> --}}
                <div class="chatPageContainer">
                    <div class="chatTitleBarContainer">
                        <div class="chatImagesContainer">

                        </div>
                        <span id="chatName" data-toggle="modal" data-target="#chatNameModal">{{chatData.chatName}}</span>
                    </div>
                    <div class="mainContentContainer">
                        <div class="loadingSpinnerContainer">
                            <img src="/images/spinner.gif" alt="Loading spinner">
                        </div>
                        <div class="chatContainer" style="visibility: hidden;" data-room={{chatId}}>
                            <ul class="chatMessages">

                            </ul>
                            <div class="typingDots">
                                <img src="/images/dots.gif" alt="Typing dots">
                            </div>
                            <div class="footer">
                                <textarea class="inputTextbox" name="messageInput" placeholder="Type a message..."></textarea>
                                <button class="sendMessageButton">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- change name modal --}}
                <div class="modal fade" id="chatNameModal" tabindex="-1" role="dialog" aria-labelledby="chatNameModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="chatNameModalLabel">Change the chat name?</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close"></button>
                                <span aria-hidden="true">Ã—</span>
                            </div>
                            <div class="modal-body">
                                <input id="chatNameTextbox" type="text" name="" placeholder="Enter a name for this chat" value="{{{chatName}}}" />
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                                <button class="btn btn-primary" id="chatNameButton" type="button">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- change name modal --}}
            </div>
            <div class="d-none d-md-block col-md-2 col-lg-4"></div>
        </div>
    </div>
    <div id="notificationList">
    
    </div>
    <script src="https://kit.fontawesome.com/85404227e2.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
        <script src="https://cdn.socket.io/3.1.3/socket.io.min.js"
            integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh"
            crossorigin="anonymous"></script>
    <script src="/js/common.js"></script>
    <script src="/js/chatPage.js"></script>
    <script src="/js/clientSocket.js"></script>
</body>

</html>